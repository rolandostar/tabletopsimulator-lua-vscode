{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "esModuleInterop": true, // Emittery from @matanlurey/tts-editor requires this.
    "rootDirs": ["src", "server"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", "assets/web/console.js",
    // "server/**/*"
  ],
}
